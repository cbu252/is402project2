@model is402project2.Models.questions

<!--This page will allow users to see the current reply and edit it then submit it to be stored in the database or add a new reply and store it. Then send them back to the FAQ page. -->

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit or Add an Answer:</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.questionID)

        @Html.HiddenFor(model => model.question)

        <p>Question: @Model.question</p>

        <div class="form-group">
            @Html.LabelFor(model => model.answer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.answer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.answer, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.programID)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to FAQ", "Program View", "Program", new { id = Model.programID }, null);
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


